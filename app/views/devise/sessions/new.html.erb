<% content_for(:title, t(".sign_in")) %>
<div class="mt-7 flex justify-center">
  <div class="w-full max-w-md">
    <h2 class="text-5xl text-dullGold font-header text-center"><%= t(".sign_in") %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mx-auto mt-7 mb-7">
        <%= f.label :email, class: "text-dullGold" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-lightGray w-md px-3 py-2 mt-1 rounded-lg" %>
      </div>

      <div class="field mx-auto mt-7 mb-7">
        <%= f.label :password, class: "text-dullGold" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "bg-lightGray w-md px-3 py-2 mt-1 rounded-lg" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mx-auto mt-7">
          <%= f.check_box :remember_me, class: "checkbox checkbox-dullGold bg-lightGray" %>
          <%= f.label :remember_me, class: "text-dullGold" %>
        </div>
      <% end %>

      <div class="actions text-center mt-7 mb-7  mx-auto flex justify-center">
        <%= f.submit t(".sign_in"), class: "btn bg-goldBeige hover:opacity-70 block" %>
      </div>
    <% end %>

    <%# Googleログイン %>
    <div class="flex justify-center my-7">
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post , data: { turbo: false } do %>
        <button class="flex items-center justify-center gap-2 px-4 py-2 border border-gray-300 rounded-lg shadow-sm bg-white hover:opacity-70 transition">
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
            <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
            <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
            <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
            <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
            <path fill="none" d="M0 0h48v48H0z"/>
          </svg>
          <span class="text-sm font-medium text-gray-700"><%= t(".sign_in_with_google") %></span>
        </button>
      <% end %>
    </div>

    <div class="text-center my-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
