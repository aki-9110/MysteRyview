<% content_for(:title, t('.title')) %>
<div>
  <h1 class="text-5xl font-header text-dullGold my-20 text-center">パスワードの再設定</h1>

  <div class="w-full text-center mb-12">
    <p class="text-lightGray mb-2">登録しているメールアドレスをご入力ください。</p>
    <p class="text-lightGray">パスワード再設定のご案内を送信いたします。</p>
  </div>

  <div class="flex flex-col items-center justify-center">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mx-auto">
        <%= f.label :email, class: "text-dullGold" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-lightGray w-md px-3 py-2 mt-1 rounded-lg" %>
      </div>

      <div class="actions my-9 mx-auto flex justify-center">
        <%= f.submit "送信", class: "btn bg-goldBeige hover:opacity-70 block" %>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>

