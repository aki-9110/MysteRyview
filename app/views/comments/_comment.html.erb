<div class="max-w-6xl mx-auto px-4 py-8 flex flex-col md:flex-row gap-8 mt-10 justify-center">
  <div class="w-full md:w-2/3 bg-darkBlue p-6 rounded-md">
    <div class="rounded-md flex flex-col">
      <div class="border-b border-dullGold mb-4">
        <div class="flex items-center mb-4">
          <div class="w-8 h-8 bg-[#d9d9d9] rounded-full mr-3"></div>
          <span class="text-lightGray"><%= comment.user.name %></span>
          <div class="flex justify-end w-full">
            <% if current_user.own?(comment) %>
              <%= link_to "#" do %>
                <i class="fa-solid fa-pen-to-square text-dullGold fa-xl mr-5"></i>
              <% end %>
              <%= link_to "#", data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') } do %>
                <i class="fa-solid fa-trash-can text-dullGold fa-xl"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div>
        <!-- simple_formatで改行を反映させる -->
        <%= simple_format comment.content, class: "text-lightGray text-sm leading-relaxed font-text" %>
      </div>
    </div>
  </div>
</div>