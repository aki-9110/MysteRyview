<% content_for(:title, t(".title")) %>
<div class="flex-1">
  <h1 class="text-dullGold text-center text-5xl font-header mt-20"><%= t(".title") %></h1>
  <div class="container mx-auto mt-20 mb-20 px-6 md:px-32 py-6">
    <%= form_with model: @book, url: step_form_books_path, local: true do |f| %>
      <%= render "shared/error_messages", object: f.object, class: "mb-20" %>
      <div class="field mb-20">
        <%= f.label :title, class: "text-dullGold font-header block mb-2" %>
        <%= f.text_field :title, class: "form-control bg-lightGray border border-gray-200 rounded-lg w-full px-3 py-2", placeholder: "本のタイトルを入力してください", value: @book.title %>
      </div>
      <div class="field mb-20">
        <%= f.label :author, class: "text-dullGold font-header block mb-2" %>
        <%= f.text_field :author, class: "form-control bg-lightGray border border-gray-200 rounded-lg w-full px-3 py-2", placeholder: "著者を入力してください", value: @book.author %>
      </div>
      <div class="actions flex justify-center">
        <%= f.submit t(".next"), class: "btn btn-primary bg-goldBeige text-darkNavy block" %>
      </div>
    <% end %>
  </div>
</div>