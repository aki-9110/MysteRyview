<% content_for(:title, @review.book.title) %>
<%= render "non_spoiler", review: @review %>

<div class="space-x-4 flex justify-center mt-20 mb-40">
  <%= link_to t(".index"), reviews_path, class: "btn bg-goldBeige text-darkNavy px-6 py-2 rounded hover:bg-[#d4b886]" %>
  <%=
    link_to t(".show_spoiler_review"),
    spoiler_review_path(@review),
    onclick: "return confirm('ネタバレが表示されますがよろしいですか？');",
    class: "btn bg-[#8b0000] text-white px-6 py-2 rounded hover:opacity-60"
  %>
</div>