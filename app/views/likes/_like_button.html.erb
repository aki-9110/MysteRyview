<% if current_user %>
  <% if current_user.like?(review) %>
    <%= link_to like_path(current_user.likes.find_by(review_id: review.id)), data: { turbo_method: :delete }, "data-testid": "like-button" do %>
      <i class="fa-solid fa-thumbs-up fa-xl" style="color: #eed9b6;"></i>
    <% end %>
  <% else %>
    <%= link_to likes_path(review_id: review.id), data: { turbo_method: :post }, "data-testid": "unlike-button" do %>
      <i class="fa-regular fa-thumbs-up fa-xl" style="color: #eed9b6;"></i>
    <% end %>
  <% end %>
<% else %>
  <%= link_to new_user_session_path, class: "hover:cursor-pointer" do %>
    <i class="fa-regular fa-thumbs-up fa-xl" style="color: #eed9b6;"></i>
  <% end %>
<% end %>